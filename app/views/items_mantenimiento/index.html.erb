<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Items de Mantenimiento</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear Item de mantenimiento', new_item_mantenimiento_path, class: 'btn btn-primary' %>      
      </div>
    </div>
  </div>
</div>

<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>               
        <th>Item</th>
        <th>Cambiar(dias)</th>
        <th>Cambiar(kmts)</th>                      
      </tr>
    </thead>

    <tbody>
       <% @items_mantenimiento.each do |item| %>
        <tr>                 
          <td><%= item.nombre %></td>
          <td><%= item.cambiar_dias %></td>
          <td><%= item.cambiar_kmts %></td>                                                

          <td style="width: 25%">     
            <%= link_to "Detalle", item, class: "btn btn-warning btn-block" %>    
            <%= link_to "Editar", edit_item_mantenimiento_path(item), class: "btn btn-success btn-block" %>                     
            <%= link_to "Borrar", item, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

