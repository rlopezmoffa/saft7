<%= render @item_mantenimiento %>

<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>               
        <th>Vehiculo</th>
        <th>Fecha</th>
        <th>Kmts</th>                      
        <th>Fecha proximo</th>
        <th>Kmts proximo</th>  
      </tr>
    </thead>

    <tbody>
      <% @servicios_realizados.each do |servicio_realizado| %>
        <tr>                 
          <td><%= servicio_realizado.get_vehiculo %></td>
          <td><%= servicio_realizado.fecha %></td>          
          <td><%= servicio_realizado.kmts %></td>       
          <td><%= servicio_realizado.fecha_proximo %></td>                                                
          <td><%= servicio_realizado.kmts_proximo %></td>       

          <td style="width: 25%">     
            <%= link_to "Detalle", servicio_realizado, class: "btn btn-warning btn-block" %>    
            <%= link_to "Editar", edit_servicio_realizado_path(servicio_realizado), class: "btn btn-success btn-block" %>                     
            <%= link_to "Borrar", servicio_realizado, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div> 
  <%= link_to "Cerrar", items_mantenimiento_path %>  
</div>
