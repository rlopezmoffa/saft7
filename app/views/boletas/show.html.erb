<%= render @boleta %>

<div class="container">

    <div class="row">
       <h1><%= @notice %></h1>            
    </div>

    <div class="row">

      <div class="col">
        <%= link_to "Editar Boleta", edit_boleta_path(@boleta), class: "btn btn-success btn-block" %>
      </div>
       
      <div class="col">
         <%= link_to "Eliminar Boleta", @boleta, class: "btn btn-danger", method: :delete, 
         data: { "turbo-method": :delete, turbo_confirm: "Confirma el borrado de la boleta?" } %>
      </div>
 
      <div class="col">
        <%= link_to 'Crear nueva Boleta', new_boleta_path, class: 'btn btn-primary' %>     
      </div>

      <div class="col">
        <%= link_to "Listar Boletas", boletas_path, class: "btn btn-warning btn-block" %>   
      </div>       
      
    </div>
  </div>


 