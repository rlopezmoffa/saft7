<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Servicios Realizados</h3>
      <h4><%= @vehiculo.matricula + ' ' +  @vehiculo.marca + ' ' + @vehiculo.modelo %></h4>      
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Nuevo Servicio Realizado', new_servicio_realizado_path(:id => @vehiculo.id), class: 'btn btn-primary' %>      
      </div>
    </div>
  </div>
</div>

<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>               
        <th>Item</th>
        <th>Fecha</th>
        <th>Kmts</th>                      
        <th>Fecha proximo</th>
        <th>Kmts proximo</th>  
      </tr>
    </thead>

    <tbody>
      <% @servicios_realizados.each do |servicio_realizado| %>
        <tr>                 
          <td><%= servicio_realizado.get_item %></td>
          <td><%= servicio_realizado.fecha %></td>          
          <td><%= servicio_realizado.kmts %></td>       
          <td><%= servicio_realizado.fecha_proximo %></td>                                                
          <td><%= servicio_realizado.kmts_proximo %></td>       

          <% if false %>
            <td style="width: 25%">               
              <%= link_to "Editar", edit_servicio_realizado_path(servicio_realizado), class: "btn btn-success btn-block" %>                     
              <%= link_to "Borrar", servicio_realizado, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma?" } %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div> 
  <%= link_to "Cerrar", vehiculos_path %>  
</div>
