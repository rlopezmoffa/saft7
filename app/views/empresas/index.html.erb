<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Empresas</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear Empresa', new_empresa_path, class: 'btn btn-primary' %>      
      </div>
    </div>
  </div>
</div>

<br />
<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>       
        <th>Nombre</th>
        <th>Direccion</th>                              
      </tr>
    </thead>

    <tbody>
      <% @empresas.each do | empresa | %>
        <tr>                  
          <td><%= empresa.nombre %></td>                
          <td><%= empresa.direccion %></td>     

           <td style="width: 25%">     
            <%= link_to "Detalle", empresa, class: "btn btn-warning btn-block" %>    
            <%= link_to "Editar", edit_empresa_path(empresa), class: "btn btn-success btn-block" %>                     
            <%= link_to "Borrar", empresa, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma el borrado de la empresa?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>