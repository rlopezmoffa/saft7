<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Choferes</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear Chofer', new_chofer_path, class: 'btn btn-primary' %>      
      </div>
    </div>
  </div>
</div>

<br />
<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>              
        <th>Nombre</th>               
        <th>Apellido</th>               
      </tr>
    </thead>

    <tbody>
      <% @choferes.each do | chofer | %>
        <tr>                  
          <td><%= chofer.nombre %></td>                
          <td><%= chofer.apellido %></td>     

           <td style="width: 25%">     
            <%= link_to "Editar", edit_chofer_path(chofer), class: "btn btn-success btn-block" %>                     
            <%= link_to "Borrar", chofer, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>