<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Alta de Chofer en Empresa <%= @empresa.id %></h3>
    </div>    
  </div>
</div>

<br />
<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>              
        <th>Nombre</th>               
        <th>Apellido</th>               
      </tr>
    </thead>

    <tbody>
      <% if @choferes %>
      <% @choferes.each do | chofer | %>
        <tr>                  
          <td><%= chofer.nombre %></td>                
          <td><%= chofer.apellido %></td>     

           <td style="width: 25%">     
            <%= link_to "Incorporar a empresa", new_empresa_chofer_path(:empresa_id => @empresa.id, :chofer_id => chofer.id), class: "btn btn-success btn-block" %>
          </td>
        </tr>        
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to "Finalizar", empresa_url(@empresa), class: "btn btn-warning btn-block" %> 
</div>