<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Vehiculos</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear Vehiculo', new_vehiculo_path, class: 'btn btn-primary' %>      
      </div>
    </div>
  </div>
</div>

<br />
<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>               
        <th>Matricula</th>         
        <th>Movil</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Empresa</th>     
      </tr>
    </thead>

    <tbody>
      <% @vehiculos.each do | vehiculo | %>
        <tr>
          <td><%= vehiculo.matricula %></td>                        
          <td><%= vehiculo.movil %></td>                 
          <td><%= vehiculo.marca %></td>
          <td><%= vehiculo.modelo %></td>
          <td><%= vehiculo.get_empresa %></td>                        

          <td style="width: 25%">     
            <%= link_to "Detalle", vehiculo, class: "btn btn-warning btn-block" %>    
            <%= link_to "Editar", edit_vehiculo_path(vehiculo), class: "btn btn-success btn-block" %>                     
            <%= link_to "Borrar", vehiculo, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Confirma?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

