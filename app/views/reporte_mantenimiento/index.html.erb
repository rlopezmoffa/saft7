<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Reporte de Mantenimiento</h3>     
    </div>    
  </div>
</div>

<%= form_tag reporte_mantenimiento_url, :method => 'get' do %>
  <div class="field">

  <%= label_tag :fecha_inicial %>
  <%= select_date @fecha_inicial, :prefix => :from %>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

  <%= label_tag :fecha_final %>
  <%= select_date @fecha_final, :prefix => :to %>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
  <%= label_tag :vehiculo %>   
  <%= collection_select :vehiculo, :id, Vehiculo.order(:matricula),:id,:matricula, include_blank: false %> 
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= submit_tag "Aplicar seleccion" %>
  </div>
<% end %>

<div class="table-responsive">
 <table class="table table-striped table-sm">
    <thead>
      <tr>               
        <th>Item</th>
        <th>Fecha</th>
        <th>Kmts</th>                      
        <th>Fecha proximo</th>
        <th>Kmts proximo</th>  
      </tr>
    </thead>

    <tbody>
      <% @servicios_realizados.each do |servicio_realizado| %>
        <tr>                 
          <td><%= servicio_realizado.get_item %></td>
          <td><%= servicio_realizado.fecha %></td>          
          <td><%= servicio_realizado.kmts %></td>       
          <td><%= servicio_realizado.fecha_proximo %></td>                                                
          <td><%= servicio_realizado.kmts_proximo %></td>       
        </tr>
      <% end %>
    </tbody>
  </table>
</div>